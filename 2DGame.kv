#File name: 2DGame.py


<FloatLayout>:
    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
    size_hint: 1, 1
    canvas:
        Color:
            rgb: [0,0,1,1]
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        text: "Right"
        pos_hint: {"right": 1, 'top': .2}
        background_color: (1, 0, 0, 1)
        color: 1,0,0,1
        font_size: 40
        size_hint: 0.3, 0.2
    Button:
        text: "Left"
        pos_hint: {"right": .3, 'top': .2}
        background_color: (1, 0, 0, 1)
        color: 1,0,0,1
        font_size: 40
        size_hint: 0.3, 0.2
    Button:
        text: "Up"
        pos_hint: {"right": .65, 'top': .4}
        background_color: (1, 0, 0, 1)
        color: 1,0,0,1
        font_size: 40
        size_hint: 0.3, 0.2
    Button:
        text: "Down"
        pos_hint: {"right": .65, 'top': .2}
        background_color: (1, 0, 0, 1)
        color: 1,0,0,1
        font_size: 40
        size_hint: 0.3, 0.2
    
